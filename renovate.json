{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        "schedule:daily",
        "group:all",
        "config:recommended"
    ],
    "ignorePaths": [
        "v1.16-ruby3.2/"
    ],
    "automerge": true,
    "major": {
        "automerge": false
    },
    "packageRules": [
        {
            "matchUpdateTypes": ["major"],
            "enabled": false
        }
    ]
}
